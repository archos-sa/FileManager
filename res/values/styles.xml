<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="InfoDialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
       <item name="drawableSize">50dp</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="InfoDialogText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/info_dialog_text_color</item>
    </style>

    <style name="InfoDialogText.Grey">
        <item name="android:textColor">@color/info_dialog_text_color_grey</item>
    </style>

    <style name="Light.Large" parent="@android:style/TextAppearance.Large">
        <!-- empty, android:fontFamily is for API >= 16 only :-( -->
    </style>

    <style name="Light.Medium" parent="@android:style/TextAppearance.Medium">
        <!-- empty, android:fontFamily is for API >= 16 only :-( -->
    </style>

    <style name="Light.Small" parent="@android:style/TextAppearance.Small">
        <!-- empty, android:fontFamily is for API >= 16 only :-( -->
    </style>

    <style name="FragmentHeader" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_marginBottom">8dip</item>
        <item name="android:layout_marginLeft">16dip</item>
        <item name="android:layout_marginRight">8dip</item>
    </style>

    <style name="PagerTabStripText" parent="@android:style/TextAppearance.DeviceDefault.Widget.TabWidget">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
